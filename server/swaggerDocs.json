          },
          "user": {
            "type": "object",
            "description": "Information about user",
            "example": {
              "books": [],
              "training": null,
              "token": null,
              "_id": "60801d991928a48364f687d2",
              "username": "User",
              "email": "user@example.com",
              "password": "$2a$06$hYzvTDkcWa4u/3hDeZtp2.HtTHJEcj2YaNpRFysWf5QiIPew6mvbe",
              "createdAt": "2021-04-21T12:42:01.460Z",
              "updatedAt": "2021-04-21T12:42:01.460Z"
            }
          }
        }
      },

      "AddingBookRequest": {
        "required": ["title", "numberOfPages"],
