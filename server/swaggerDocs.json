        "properties": {
          "review": {
            "type": "string",
            "description": "Book's review",
            "example": "Harry Potter"
          },
          "rating": {
            "type": "string",
            "description": "Book's rating",
            "example": "4"
          }        
        }
      },
      "PatchBookResponse": {
        "required": [],
