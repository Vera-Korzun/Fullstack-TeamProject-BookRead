              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetContactById"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid id) / No token provided",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          },
          "404": {
            "description": "Contact not found",
            "content": {}
          }
        }
      },
      "patch": {
        "tags": ["Training"],
        "summary": "Update contact",
        "security": [{ "Bearer": [] }],
